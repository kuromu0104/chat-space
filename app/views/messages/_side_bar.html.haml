.side-bar
  .side-bar__name
    .side-bar__top-item
      .side-bar__name
        = current_user.name
      .side-bar-__icon
        = link_to new_group_path, class: "edit-btn" do
          =icon('far', 'edit')
        = link_to edit_user_path(current_user), class: "cog-btn" do
          =icon('fas', 'cog')
  .side-bar__group
    - current_user.groups.each do |group|
      .side-bar__group__list
        = link_to '#' do
          .side-bar__group__name
            = group.name
          .side-bar__group__message
            まだメッセージはありません
